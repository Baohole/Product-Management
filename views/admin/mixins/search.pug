mixin search-form(find)
    form(id="form-search")
        .input-group 
            input(
                type="text"
                placeholder="Tìm kiếm"
                name="search_query"
                class='form-control'
                value=find
            )
            .input-group-append 
                button(
                    class='btn btn-success'
                    type="submit"
                ) Tìm