extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/hierarchy.pug
block main
    
    +alert-success(3000)
    +alert-fail(5000)

    if (role.permissions.includes('products-create'))
        h1(class="mb-4") Chỉnh sửa sản phẩm
        
        form(
            action= `${prefixAdmin}/products/edit/${product.id}?_method=PATCH` 
            id="form-edit-product" 
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="title") Tiêu đề 
                input(
                    type="text" 
                    class="form-control"
                    id="title"
                    name="title" 
                    value= product.title
                )
            div(class="form-group")
                label(for="category_id") Danh mục
                select(
                    class="form-control" 
                    id="category_id" 
                    name="category_id" 
                )
                    if (product.category_id == "")
                        option(value="" selected) ---Không----
                        +selectParentCategory(categories, 1 , product.category_id)
                    else
                        +selectParentCategory(categories, 1 , product.category_id)
                        option(value="") ---Không----
            div(class="form-group")
                label(for="desc") Mô tả 
                textarea(
                    class="form-control"
                    id="desc" 
                    name="description"   
                    rows="5"
                ) !{product.description}
            div(class="form-group")
                label(for="price") Giá 
                input(
                    type="number" 
                    class="form-control" 
                    id="price" 
                    name="price" 
                    step="0.01"
                    value=product.price 
                    min="0"
                )
            div(class="form-group" )
                label(for="discount") % Giảm giá 
                input(
                    type= "number" 
                    class="form-control" 
                    id="discount" 
                    name="discountPercentage" 
                    step="0.01"
                    value=product.discountPercentage
                    min="0"
                )
            div(class="form-group" )
                label(for="stock") Số lượng 
                input(
                    type="number"
                    class="form-control"
                    id="stock"
                    name="stock"
                    value=product.stock
                    min="0"
                )

            div(
                class="form-group"
                img-upload
            )
                label(for="thumbnail") Ánh
                input(
                    type="file"
                    class="form-control"
                    id="thumbnail"
                    name="thumbnail"
                    img-upload-input
                )
                img(
                    src=product.thumbnail
                    alt="Ảnh sản phẩm"
                    style ='width: 100px'
                    img-upload-preview
                )
            div(class="form-group")
                label(for="position") Vị trí
                input(
                    type="number"
                    class="form-control"
                    id="position"
                    name="position"
                    min="1"
                    value=product.position
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio" 
                    class="form-check-input" 
                    id="statusActive"
                    name="status"
                    value="active" 
                    checked=(product.status==='active')
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio" 
                    class="form-check-input"
                    id="statusInactive"
                    name="status" 
                    value="inactive"
                    checked=(product.status==='inactive')
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            br
            br
            div(class="form-group")
                input(
                    type="checkbox" 
                    class="form-check-input"
                    id="featured"
                    name="featured" 
                    value="1"
                    checked=(product.featured)
                )
                label(
                    for="featured" 
                    class="form-check-label" 
                    style='color: red'
                )   Sản phẩm nổi bật *
            br
           
            div(class="form-group")
                button(
                    type="submit"
                    class='btn btn-primary') Thay đổi 
 





        