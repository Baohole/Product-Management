extends ../../layouts/auth.pug
include ../../mixins/alert.pug


block main 
    +alert-success(3000)
    +alert-fail(5000)
    
    h1(class="mb-4") Đăng nhập

    form(
        action= `${prefixAdmin}/auth/login` 
        id="form-create-product" 
        method="POST"
    )
        div(class="form-group")
            label(for="email") Email
            input(
                type="email" 
                class="form-control"
                id="email"
                name="email" 
                required
            )
        div(class="form-group")
            label(for="password") Mật khẩu 
            input(
                class="form-control"
                id="password" 
                name="password"
                type="password"
                required
            )

        div(class="form-group")
            button(
                type="submit"
                class='btn btn-primary') Đăng nhập
