extends ../../layouts/default.pug
include ../../mixins/alert.pug


block main

    +alert-success(3000)
    +alert-fail(5000)
    .container
    .row.justify-content-center
        .col-md-6
            .card.mt-5
                .card-body
                    .tab-content
                        #login.tab-pane.fade.show.active(role="tabpanel")
                            h3.mt-5.mb-4.text-center Nhập mã OTP
                            form(
                                action=`/user/password/reset`
                                id="forgot-form"
                                method="POST"
                                class="form-forgot"
                            )
                                .mb-3
                                    label.form-label(for="password") Mật khẩu mới
                                    input.form-control#password(
                                        type="password"
                                        name="password"
                                        placeholder="Nhập mật khẩu mới"
                                        required
                                    )

                                .mb-3
                                    label.form-label(for="confirm_password") Xác nhận mật khẩu
                                    input.form-control#confirm_password(
                                        type="password"
                                        name="confirm_password"
                                        placeholder="Xác nhận mật khẩu"
                                    )
                                .d-grid.gap-2
                                    button.btn.btn-primary(type="submit") Đổi mật khẩu
