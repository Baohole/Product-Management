mixin pagination(pagination)
    li(class=`page-item`)
        button(class="page-link" 
                button-pagination = pagination.currentPage > 1 ? pagination.currentPage - 1 : pagination.currentPage) Prev

        - for(var i = pagination.currentPage; i < pagination.currentPage + 3; i++)
            li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                button(class="page-link" button-pagination = i) #{i}
        
        
        li(class=`page-item`)
            button(class="page-link" 
                    button-pagination = pagination.currentPage < pagination.totalPages ? pagination.currentPage + 1: pagination.currentPage) Next