include ../mixins/submenu.pug

header.header
    .cotainer 
        .row.align-items-center
            .col-3 
                .inner.logo    
                    a(href='/')
                        img(src='#', alt = 'Logo')
            
            .col-9
                .inner-menu 
                    ul
                        li  
                            a(href='/') Trang chủ
                        li(class= 'sub-menu')
                            a(href='/products') Trang sản phẩm
                            +sub-menu(productCategories)
                        li  
                            a(href='/cart') Giỏ hàng(#{cart ?  cart.totalQuantity : '0'})
                        if (user)
                            li  
                                a(href='/user/logout') Đăng xuất
                            li  
                                a(href='/chat') Chat
                        else
                            li  
                                a(href='/user/login') Đăng nhập/Đăng ký